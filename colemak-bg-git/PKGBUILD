# Maintainer: Salif Mehmed <salifm@protonmail.com>
pkgname=colemak-bg-git
pkgver=r20.fedb366
pkgrel=1
pkgdesc='Colemak for the Bulgarian alphabet'
arch=('any')
url='https://salifm.github.io/colemak-bg'
license=('custom')
depends=('xkeyboard-config' 'patch')
makedepends=('git')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
install=colemak-bg-git.install
source=('colemak-bg::git+https://github.com/salifm/colemak-bg#branch=main')
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd "$srcdir/${pkgname%-git}"
    install -Dm644 linux/bg.patch "$pkgdir"/usr/share/${pkgname%-git}/linux/bg.patch
    install -Dm644 linux/evdev.xml.patch "$pkgdir"/usr/share/${pkgname%-git}/linux/evdev.xml.patch
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/${pkgname%-git}/LICENSE
}
