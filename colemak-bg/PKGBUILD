# Maintainer: Salif Mehmed <salifm@protonmail.com>

pkgname=colemak-bg
pkgver=0.2020.0925
pkgrel=1
pkgdesc="Colemak for the Bulgarian alphabet"
arch=("any")
url="https://salifm.github.io/hasher"
license=("custom")
depends=("xkeyboard-config" "patch")
source=("${pkgname}.tar.gz::https://github.com/salifm/colemak-bg/archive/a0af68b85f04c293f51ed27dc576f7fa06e81a37.tar.gz")
sha256sums=("284486e37687c69d97079182dfaed689e42c35544fd5c9a067747727899decc1")
install=colemak-bg.install

package() {
    cd "$pkgname-a0af68b85f04c293f51ed27dc576f7fa06e81a37"
    install -Dm755 install.sh "$pkgdir"/usr/share/$pkgname/install.sh
    install -Dm755 restore_backup.sh "$pkgdir"/usr/share/$pkgname/restore_backup.sh
    install -Dm644 linux/bg.patch "$pkgdir"/usr/share/$pkgname/linux/bg.patch
    install -Dm644 linux/evdev.xml.patch "$pkgdir"/usr/share/$pkgname/linux/evdev.xml.patch
    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}
